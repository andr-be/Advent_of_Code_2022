use std::fs;
use std::path::Path;

fn main() {
    let path = Path::new("/home/andr-be/rust_programs/advent_of_code_2022/day_1/test_input.txt");
    read_input(path);   
}

fn read_input(file: Path) -> String {
    std::fs::read_to_string(file).unwrap();
}

// Challenge 1:
// - load the input file into memory
// - parse the numbers
//  - form a new group
//  - add each line until blank line
//  - at blank line, add up all of the lines in the group
// - arrange the elves in calorie size order
// - report the top value

